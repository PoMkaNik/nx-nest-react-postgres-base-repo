{
    "name": "be-api-main",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/be-api-main/src",
    "projectType": "application",
    "tags": [
        "type:backend"
    ],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "webpack-cli build --mode=production",
                "cwd": "apps/be-api-main"
            },
            "configurations": {
                "development": {
                    "command": "webpack-cli build --mode=development",
                    "cwd": "apps/be-api-main"
                }
            }
        },
        "serve": {
            "continuous": true,
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": [
                "build"
            ],
            "options": {
                "buildTarget": "be-api-main:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "be-api-main:build:development"
                },
                "production": {
                    "buildTarget": "be-api-main:build:production"
                }
            }
        },
        "__build-open-api-generator": {
            "executor": "@nx/webpack:webpack",
            "outputs": [
                "{options.outputPath}"
            ],
            "defaultConfiguration": "development",
            "options": {
                "target": "node",
                "compiler": "tsc",
                "outputPath": "tmp/apps/be-api-main-open-api-generator",
                "main": "apps/be-api-main/scripts/generate-swagger.ts",
                "tsConfig": "apps/be-api-main/tsconfig.app.json",
                "webpackConfig": "apps/be-api-main/webpack.config.js"
            },
            "configurations": {
                "development": {
                    "optimization": false,
                    "extractLicenses": false
                }
            }
        },
        "generate-open-api": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "options": {
                "buildTarget": "be-api-main:__build-open-api-generator",
                "watch": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "be-api-main:__build-open-api-generator:development",
                    "args": [
                        "-o",
                        "../../../api/be-api-main.yaml"
                    ]
                }
            }
        }
    }
}